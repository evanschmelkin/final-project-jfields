<%= form_for(micropost) do |form| %>
  
  <% if micropost.errors.any? %>
    <%= render partial: "shared/errors", locals: {object: micropost, name:"micropost"} %>
  <% end %>

  <div class="input-group">
    <span class="input-group-text">CONTENT</span>
    <%= form.text_area :content, class:"form-control", placeholder: "CONTENT", :rows => "3" %>
  </div>

  <div>
    <button type="submit" class="btn btn-primary">Create MicroPost</button>
  </div>
<% end %>
