<div id="<%= dom_id todo %>">
  <div class="card" style="width: 18rem;">
    <% if todo.priority == true %>
      <span class="badge bg-danger">PRIORITY</span>
    <% end %>

    <div class="card-body">
      <h5 class="card-title"><%= todo.title %></h5>

      <% if todo.completed == true %>
        <span class="badge bg-secondary">Completed</span>
      <% end %>

      <p class="card-text">Category: <%= todo.category.name %></p>
    </div>
  </div>





  <!-- commented out by evan because we shouldn't show user id/username
  <p>
    <strong>User:</strong>
    <%= todo.user_id %>
  </p>
-->


</div>
